<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addNewFodBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.CreateFood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName|numberDecimal" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/selectedFoodCatagories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.chip.ChipGroup>

        <Spinner
            android:id="@+id/foodcategoryspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food1ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/airrest" />

                        <TextView
                            android:id="@+id/food1text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food2ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/boujeerestaurant" />

                        <TextView
                            android:id="@+id/food2text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food3ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/beuatifulrestaurant" />

                        <TextView
                            android:id="@+id/food3text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food4ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/wowrestaurant" />

                        <TextView
                            android:id="@+id/food5text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food5ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/linkrestaurant" />

                        <TextView
                            android:id="@+id/food6text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food6ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"

                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/modernrestaurant" />

                        <TextView
                            android:id="@+id/food7text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food7ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/runrest" />

                        <TextView
                            android:id="@+id/food8text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/food8ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/chairest" />

                        <TextView
                            android:id="@+id/food9text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/addNewFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Add Food" />

        <ProgressBar
            android:id="@+id/addFoodLoader"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>