<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addRES"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.CreateRestaurant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/ratingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:max="100"
            android:min="0" />

        <EditText
            android:id="@+id/avgtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Delivery Time"
            android:inputType="textPersonName" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/selectedFoodCatagories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.chip.ChipGroup>

        <Spinner
            android:id="@+id/foodcategoryspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest1ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/airrest" />

                        <TextView
                            android:id="@+id/rest1text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest2ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/boujeerestaurant" />

                        <TextView
                            android:id="@+id/rest2text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest3ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/beuatifulrestaurant" />

                        <TextView
                            android:id="@+id/rest3text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest4ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/wowrestaurant" />

                        <TextView
                            android:id="@+id/rest5text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest5ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/linkrestaurant" />

                        <TextView
                            android:id="@+id/rest6text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest6ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"

                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/modernrestaurant" />

                        <TextView
                            android:id="@+id/rest7text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest7ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/runrest" />

                        <TextView
                            android:id="@+id/rest8text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/rest8ImageBtn"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/chairest" />

                        <TextView
                            android:id="@+id/rest9text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Selected"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/selecteddishes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/select_dishes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Add Food" />

        <Button
            android:id="@+id/savebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Save Button" />

        <ProgressBar
            android:id="@+id/addRestaurantLoader"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>